<div class="form-auth">
  <h2>Edit account</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>


    <br / >
    <% if resource.errors.messages[:name] %>
      <div class="has-error">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control", :autofocus => true %>
        Email
        <%= resource.errors.messages[:name].first %><br />
      </div>
    <% else %>
      <div>
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control", :autofocus => true %><br />
      </div>
    <% end %>  

    <% if resource.errors.messages[:email] %>
      <div class="has-error">
        <%= f.label :email, class: "control-label" %>
        <%= f.email_field :email, class: "form-control", :autofocus => true %>
        Email
        <%= resource.errors.messages[:email].first %><br />
      </div>
    <% else %>
      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control" %><br />
      </div>
    <% end %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <% if resource.errors.messages[:password] %>
      <div class="has-error">
        <%= f.label :password, class: "control-label" %><i class="small"> (leave blank if you don't want to change it)
        </i>
        <%= f.password_field :password, class: "form-control", :autofocus => true, :autocomplete => "off" %>
        Password
        <%= resource.errors.messages[:password].first %><br />
      </div>
    <% else %>
      <div>
        <%= f.label :password, class: "control-label" %>
        <i class="small"> (leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, class: "form-control", :autocomplete => "off" %>
      </div>
    <% end %>

    <br />
    <% if resource.errors.messages[:password_confirmation] %>
      <div class="has-error">
        <%= f.label :password_confirmation, class: "control-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", :autofocus => true %>
        Password confirmation
        <%= resource.errors.messages[:password_confirmation].first %><br />
      </div>
    <% else %>
      <div>
        <%= f.label :password_confirmation, class: "control-label" %><br />
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    <% end %>

    <br />
    <% if resource.errors.messages[:current_password] %>
      <div class="has-error">
        <%= f.label :current_password, class: "control-label" %>
        <%= f.password_field :current_password, class: "form-control", :autofocus => true %>
        Password
        <%= resource.errors.messages[:current_password].first %><br />
      </div>
    <% else %>
      <div>
        <%= f.label :current_password, class: "control-label" %><br />
        <%= f.password_field :current_password, class: "form-control" %>
      </div>
    <% end %>

    <br /><div>
    <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %></div>
  <% end %>

  <br /><%= button_to "Delete my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-lg btn-danger btn-block" %>

</div>